<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:e="urn:import:de.knightsoftnet.validators.client.decorators">

  <ui:style src="LoginViewGwtImpl.css"/>
  <ui:with field="localization" type="de.knightsoftnet.validationexample.client.ui.login.LoginConstants" />

  <g:HTMLPanel styleName="{style.centerPanel}">
   <g:HTML styleName="{style.header}">
     <h1><ui:text from='{localization.header}'/></h1>
   </g:HTML>
   <div class="{style.form}">
      <div class="{style.panel}">
       <div>
         <div class="{style.inputline}">
           <g:Label styleName="{style.label}" text="{localization.labelUser}" />
           <e:UniversalDecoratorWithIcons errorLocation="RIGHT" stylePrimaryName="{style.input}" ui:field="userName">
             <e:widget>
               <g:TextBox visibleLength="20" maxLength="50"/>
             </e:widget>
           </e:UniversalDecoratorWithIcons>
         </div>
         <div class="{style.inputline}">
           <g:Label styleName="{style.label}" text="{localization.labelPassword}" />
           <e:UniversalDecoratorWithIcons errorLocation="RIGHT" stylePrimaryName="{style.input}" ui:field="password">
             <e:widget>
               <g:PasswordTextBox visibleLength="20" maxLength="50" />
             </e:widget>
           </e:UniversalDecoratorWithIcons>
         </div>
         <g:DisclosurePanel styleName="{style.disclosure}">
           <g:header><ui:text from='{localization.changePassword}' /></g:header>
           <g:FlowPanel>
           <g:FlowPanel styleName="{style.inputlinedisclosure}">
             <g:Label styleName="{style.labeldisclosure}" text="{localization.labelNewPassword}" />
             <e:UniversalDecoratorWithIcons errorLocation="RIGHT" stylePrimaryName="{style.input}" ui:field="newPassword">
               <e:widget>
                 <g:PasswordTextBox visibleLength="20" maxLength="50" />
               </e:widget>
             </e:UniversalDecoratorWithIcons>
           </g:FlowPanel>
           <g:FlowPanel styleName="{style.inputlinedisclosure}">
             <g:Label styleName="{style.labeldisclosure}" text="{localization.labelNewPasswordRepeat}" />
             <e:UniversalDecoratorWithIcons errorLocation="RIGHT" stylePrimaryName="{style.input}" ui:field="newPasswordRepeat">
               <e:widget>
                 <g:PasswordTextBox visibleLength="20" maxLength="50" />
               </e:widget>
             </e:UniversalDecoratorWithIcons>
           </g:FlowPanel>
         </g:FlowPanel>
         </g:DisclosurePanel>
         <g:FlowPanel styleName="{style.message}">
           <g:Label ui:field="logMessages"/>
         </g:FlowPanel>
       </div>    
     </div>
   </div>
   <g:FlowPanel styleName="{style.button}">
     <g:Button ui:field="loginButton" text="{localization.buttonLogin}" />
   </g:FlowPanel>
  </g:HTMLPanel>
</ui:UiBinder> 