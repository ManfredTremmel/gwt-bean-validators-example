<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:e="urn:import:de.knightsoftnet.validators.client.decorators"
  xmlns:w="urn:import:de.knightsoftnet.validationexample.client.widget">

  <ui:style src="AddressViewGwtImpl.css"/>
  <ui:with field="localization" type="de.knightsoftnet.validationexample.client.ui.address.AddressConstants" />

  <g:HTMLPanel styleName="{style.centerPanel}">
   <g:HTML styleName="{style.header}">
     <h1><ui:text from='{localization.header}'/></h1>
   </g:HTML>
   <div class="{style.form}">
      <div class="{style.panel}">
       <div>
         <div class="{style.inputline}">
           <g:Label styleName="{style.label}" text="{localization.labelPostOfficeBox}" />
           <e:UniversalDecoratorWithIcons errorLocation="RIGHT" stylePrimaryName="{style.input}" ui:field="postOfficeBox">
             <e:widget>
               <g:TextBox visibleLength="30" maxLength="255"/>
             </e:widget>
           </e:UniversalDecoratorWithIcons>
         </div>
         <div class="{style.inputline}">
           <g:Label styleName="{style.label}" text="{localization.labelStreet}" />
           <e:UniversalDecoratorWithIcons errorLocation="RIGHT" stylePrimaryName="{style.input}" ui:field="street">
             <e:widget>
               <g:TextBox visibleLength="30" maxLength="255"/>
             </e:widget>
           </e:UniversalDecoratorWithIcons>
         </div>
         <div class="{style.inputline}">
           <g:Label styleName="{style.label}" text="{localization.labelStreetNumber}" />
           <e:UniversalDecoratorWithIcons errorLocation="RIGHT" stylePrimaryName="{style.input}" ui:field="streetNumber">
             <e:widget>
               <g:TextBox visibleLength="10" maxLength="10"/>
             </e:widget>
           </e:UniversalDecoratorWithIcons>
         </div>
         <div class="{style.inputline}">
           <g:Label styleName="{style.label}" text="{localization.labelStreetNumberAdditional}" />
           <e:UniversalDecoratorWithIcons errorLocation="RIGHT" stylePrimaryName="{style.input}" ui:field="streetNumberAdditional">
             <e:widget>
               <g:TextBox visibleLength="10" maxLength="10"/>
             </e:widget>
           </e:UniversalDecoratorWithIcons>
         </div>
         <div class="{style.inputline}">
           <g:Label styleName="{style.label}" text="{localization.labelExtended}" />
           <e:UniversalDecoratorWithIcons errorLocation="RIGHT" stylePrimaryName="{style.input}" ui:field="extended">
             <e:widget>
               <g:TextBox visibleLength="30" maxLength="255"/>
             </e:widget>
           </e:UniversalDecoratorWithIcons>
         </div>
         <div class="{style.inputline}">
           <g:Label styleName="{style.label}" text="{localization.labelPostalCode}" />
           <e:UniversalDecoratorWithIcons errorLocation="RIGHT" stylePrimaryName="{style.input}" ui:field="postalCode">
             <e:widget>
               <g:TextBox visibleLength="10" maxLength="10"/>
             </e:widget>
           </e:UniversalDecoratorWithIcons>
         </div>
         <div class="{style.inputline}">
           <g:Label styleName="{style.label}" text="{localization.labelLocality}" />
           <e:UniversalDecoratorWithIcons errorLocation="RIGHT" stylePrimaryName="{style.input}" ui:field="locality">
             <e:widget>
               <g:TextBox visibleLength="30" maxLength="255"/>
             </e:widget>
           </e:UniversalDecoratorWithIcons>
         </div>
         <div class="{style.inputline}">
           <g:Label styleName="{style.label}" text="{localization.labelRegion}" />
           <e:UniversalDecoratorWithIcons errorLocation="RIGHT" stylePrimaryName="{style.input}" ui:field="region">
             <e:widget>
               <g:TextBox visibleLength="30" maxLength="255"/>
             </e:widget>
           </e:UniversalDecoratorWithIcons>
         </div>
         <div class="{style.inputline}">
           <g:Label styleName="{style.label}" text="{localization.labelCountryCode}" />
           <e:UniversalDecoratorWithIcons errorLocation="RIGHT" stylePrimaryName="{style.input}" ui:field="countryCode">
             <e:widget>
               <w:CountryWidget />
             </e:widget>
           </e:UniversalDecoratorWithIcons>
         </div>
         <g:FlowPanel styleName="{style.message}">
           <g:Label ui:field="logMessages"/>
         </g:FlowPanel>
       </div>    
     </div>
   </div>
   <g:FlowPanel styleName="{style.button}">
     <g:Button ui:field="addressButton" text="{localization.addressButton}" />
   </g:FlowPanel>
  </g:HTMLPanel>
</ui:UiBinder>
