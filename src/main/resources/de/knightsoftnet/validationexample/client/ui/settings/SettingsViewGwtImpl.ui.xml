<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
  ui:generateLocales="default,de"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <ui:style src="SettingsViewGwtImpl.css"/>
  <ui:with field="localization" type="de.knightsoftnet.validationexample.client.ui.settings.SettingsConstants" />

  <g:HTMLPanel styleName="{style.centerPanel}">
   <g:HTML styleName="{style.header}">
     <h1><ui:text from='{localization.header}'/></h1>
   </g:HTML>
   <g:FlowPanel styleName="{style.form}">
     <g:Label styleName="{style.labelLanguages}" text="{localization.languageLabel}" />
     <g:ListBox styleName="{style.inputLanguages}" visibleItemCount="1" ui:field="language" />
   </g:FlowPanel>
  </g:HTMLPanel>
</ui:UiBinder>
