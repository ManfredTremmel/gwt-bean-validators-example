<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:e="urn:import:de.knightsoftnet.validators.client.decorators"
  xmlns:w="urn:import:de.knightsoftnet.validationexample.client.widget">

  <ui:style src="SepaViewGwtImpl.css"/>
  <ui:with field="localization" type="de.knightsoftnet.validationexample.client.ui.sepa.SepaConstants" />

  <g:HTMLPanel styleName="{style.centerPanel}">
   <g:HTML styleName="{style.header}">
     <h1><ui:text from='{localization.header}'/></h1>
   </g:HTML>
   <div class="{style.form}">
      <div class="{style.panel}">
       <div>
         <div class="{style.inputline}">
           <g:Label styleName="{style.label}" text="{localization.labelBankName}" />
           <e:UniversalDecoratorWithIcons errorLocation="RIGHT" stylePrimaryName="{style.input}" ui:field="bankName">
             <e:widget>
               <g:TextBox visibleLength="30" maxLength="50"/>
             </e:widget>
           </e:UniversalDecoratorWithIcons>
         </div>
         <div class="{style.inputline}">
           <g:Label styleName="{style.label}" text="{localization.labelAccountOwner}" />
           <e:UniversalDecoratorWithIcons errorLocation="RIGHT" stylePrimaryName="{style.input}" ui:field="accountOwner">
             <e:widget>
               <g:TextBox visibleLength="30" maxLength="50"/>
             </e:widget>
           </e:UniversalDecoratorWithIcons>
         </div>
         <div class="{style.inputline}">
           <g:Label styleName="{style.label}" text="{localization.labelCountryCode}" />
           <e:UniversalDecoratorWithIcons errorLocation="RIGHT" stylePrimaryName="{style.input}" ui:field="countryCode">
             <e:widget>
               <w:CountryWidget />
             </e:widget>
           </e:UniversalDecoratorWithIcons>
         </div>
         <div class="{style.inputline}">
           <g:Label styleName="{style.label}" text="{localization.labelIban}" />
           <e:UniversalDecoratorWithIcons errorLocation="RIGHT" stylePrimaryName="{style.input}" ui:field="iban">
             <e:widget>
               <g:TextBox visibleLength="25" maxLength="34"/>
             </e:widget>
           </e:UniversalDecoratorWithIcons>
         </div>
         <div class="{style.inputline}">
           <g:Label styleName="{style.label}" text="{localization.labelBic}" />
           <e:UniversalDecoratorWithIcons errorLocation="RIGHT" stylePrimaryName="{style.input}" ui:field="bic">
             <e:widget>
               <g:TextBox visibleLength="15" maxLength="11"/>
             </e:widget>
           </e:UniversalDecoratorWithIcons>
         </div>
         <g:FlowPanel styleName="{style.message}">
           <g:Label ui:field="logMessages"/>
         </g:FlowPanel>
       </div>    
     </div>
   </div>
   <g:FlowPanel styleName="{style.button}">
     <g:Button ui:field="sepaButton" text="{localization.buttonSepa}" />
   </g:FlowPanel>
  </g:HTMLPanel>
</ui:UiBinder>
