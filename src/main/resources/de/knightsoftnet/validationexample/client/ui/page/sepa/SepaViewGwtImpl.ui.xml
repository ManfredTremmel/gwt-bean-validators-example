<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
  ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
  ui:generateLocales="en,de"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:d="urn:import:de.knightsoftnet.validators.client.decorators"
  xmlns:w="urn:import:de.knightsoftnet.mtwidgets.client.ui.widget">

  <ui:with field="resources"
    type="de.knightsoftnet.validationexample.client.resources.ResourcesFile" />
  <ui:style src="SepaViewGwtImpl.gss"/>

  <g:HTMLPanel styleName="{style.centerPanel}">
    <div class="{resources.grid.row}">
      <div class="{resources.grid.col} {resources.grid.col_12} {style.header}">
        <h1>
          <ui:msg description="Header Sepa Bank Account">Sepa Bank Account</ui:msg>
        </h1>
      </div>
    </div>
    <div class="{resources.grid.row}">
      <div class="{resources.grid.col} {resources.grid.col_1_3} {resources.grid.col_m_12}">
        <ui:msg description="Label Country">Country:</ui:msg>
      </div>
      <d:UniversalDecoratorWithIcons
        errorLocation="RIGHT" stylePrimaryName="{resources.grid.col} {resources.grid.col_2_3} {resources.grid.col_m_12}"
        ui:field="countryCode">
        <d:widget>
          <w:CountryListBox sort="NAME_ASC" />
        </d:widget>
      </d:UniversalDecoratorWithIcons>
    </div>
    <div class="{resources.grid.row}">
      <div class="{resources.grid.col} {resources.grid.col_1_3} {resources.grid.col_m_12}">
        <ui:msg description="Label Bic">Bic:</ui:msg>
      </div>
      <d:UniversalDecoratorWithIcons
        errorLocation="RIGHT" stylePrimaryName="{resources.grid.col} {resources.grid.col_2_3} {resources.grid.col_m_12}"
        ui:field="bic">
        <d:widget>
          <w:BicSuggestBox />
        </d:widget>
      </d:UniversalDecoratorWithIcons>
    </div>
    <div class="{resources.grid.row}">
      <div class="{resources.grid.col} {resources.grid.col_1_3} {resources.grid.col_m_12}">
        <ui:msg description="Label Bank Name">Bank Name:</ui:msg>
      </div>
      <div class="{resources.grid.col} {resources.grid.col_2_3} {resources.grid.col_m_12}">
        <g:Label ui:field="bankName" />
      </div>
    </div>
    <div class="{resources.grid.row}">
      <div class="{resources.grid.col} {resources.grid.col_1_3} {resources.grid.col_m_12}">
        <ui:msg description="Label Iban">Iban:</ui:msg>
      </div>
      <d:UniversalDecoratorWithIcons
        errorLocation="RIGHT" stylePrimaryName="{resources.grid.col} {resources.grid.col_2_3} {resources.grid.col_m_12}"
        ui:field="iban">
        <d:widget>
          <w:IbanTextBox visibleLength="30" maxLength="42"/>
        </d:widget>
      </d:UniversalDecoratorWithIcons>
    </div>
    <div class="{resources.grid.row}">
      <div class="{resources.grid.col} {resources.grid.col_1_3} {resources.grid.col_m_12}">
        <ui:msg description="Label Account Owner">Account Owner:</ui:msg>
      </div>
      <d:UniversalDecoratorWithIcons
        errorLocation="RIGHT" stylePrimaryName="{resources.grid.col} {resources.grid.col_2_3} {resources.grid.col_m_12}"
        ui:field="accountOwner">
        <d:widget>
          <g:TextBox visibleLength="50" maxLength="50" />
        </d:widget>
      </d:UniversalDecoratorWithIcons>
    </div>
    <div class="{resources.grid.row} {style.message}">
      <div class="{resources.grid.col} {resources.grid.col_12}">
        <g:Label ui:field="logMessages" />
      </div>
    </div>
    <div class="{resources.grid.row}">
      <div class="{resources.grid.col} {resources.grid.col_12} {style.button}">
        <g:Button ui:field="sepaButton">
          <ui:msg description="Send Button">Send</ui:msg>
        </g:Button>
      </div>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>
